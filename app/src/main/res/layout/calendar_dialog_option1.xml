<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/as2" />
    <TextView
        android:id="@+id/id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_pic"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="가나다"
        android:textStyle="bold"
        android:textSize="17dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_name"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="가나대학교"
        android:textSize="23dp"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:id="@+id/close_drawer"
        android:clickable="true">

        <Button
            android:id="@+id/drawer_button_1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:text="시간표 불러오기" />
        <Button
            android:id="@+id/drawer_button_2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="공유받은 일정 확인"
            android:layout_marginTop="40dp"/>
        <Button
            android:id="@+id/drawer_button_3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="일정 맞춰보기"
            android:layout_marginTop="40dp" />
    </LinearLayout>

</RelativeLayout>