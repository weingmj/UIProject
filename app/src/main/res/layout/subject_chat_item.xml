<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_border"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/subject_chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"

        android:lineBreakStyle="normal"
        android:text="chat content"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/subject_chat_name"
        app:layout_constraintTop_toBottomOf="@+id/subject_chat_name" />

    <TextView
        android:id="@+id/subject_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:text="nickname"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subject_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:text="xxxx/xx/xx xx:xx"

        app:layout_constraintBottom_toBottomOf="@+id/subject_chat_name"
        app:layout_constraintStart_toEndOf="@+id/subject_chat_name"
        app:layout_constraintTop_toTopOf="@+id/subject_chat_name" />
</androidx.constraintlayout.widget.ConstraintLayout>