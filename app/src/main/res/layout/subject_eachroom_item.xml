<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/subject_item_roomButton"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/subject_item_subjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="sample subject"
        android:gravity="center_horizontal"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="인원: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/subject_item_peopleNum"
        app:layout_constraintTop_toBottomOf="@+id/subject_item_subjectName" />

    <TextView
        android:id="@+id/subject_item_peopleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        app:layout_constraintEnd_toEndOf="@+id/subject_item_subjectName"
        app:layout_constraintTop_toBottomOf="@+id/subject_item_subjectName" />
</androidx.constraintlayout.widget.ConstraintLayout>